// packages/components/tsconfig.json
{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true, // Keep sourcemap for debugging
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
    // "declaration", "declarationDir", and "outDir" are removed
    // Rollup will control these now
  },
  "include": ["src", "stories"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.test.tsx",
    "stories"
  ]
}